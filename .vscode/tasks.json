{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-with-gcc15",
            "type": "shell",
            "command": "/opt/homebrew/bin/g++-15",
            "args": [
                "-std=c++20",
                "${file}",
                "-o",
                "${fileDirname}/a.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${fileDirname}/a.out",
            "dependsOn": "build-with-gcc15"
        }
    ]
}